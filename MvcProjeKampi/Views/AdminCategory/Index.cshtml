@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover">
    <tr>
        <th>Kategori İd</th>
        <th>Kategori Adı</th>
        <th>Kategori Açıklama</th>
        <th>Kategori Durumu</th>
        <th>İşlemler</th>
        <th>Başlıklar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td>@item.CategoryDescription</td>
            <td>@item.CategoryStatus</td>
            <td><a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a>
            <a href="#" class="btn btn-info">Güncelle</a></td>
           <td> <a href="#" class="btn btn-primary">Başlıklar</a></td>
        </tr>
    }
    <td><a href="/AdminCategory/AddCategory" class="btn btn-success">Yeni kategori Ekle</a></td>

</table>

